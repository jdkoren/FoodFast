<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_ballon_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_balloon_selecter"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text_balloon_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loading"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_balloon_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_for_details"
        android:textSize="@dimen/text_size_vsmall" android:textStyle="italic"/>

</LinearLayout>